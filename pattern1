#include<stdio.h>
#include<math.h>

int main()
{
int i,j,h,space,x=1;

printf("\n Enter the height: ");
scanf("%d",&h);
for(i=1;i<=h;i++)
{
    printf("\n");
    for(space=1;space<=(h-i);space++)
        printf(" ");
    for(j=1;j<=i;j++)
    {
        printf("%d ",x);
        x=1-x;
    }
}
return 0;
}
